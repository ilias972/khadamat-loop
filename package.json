{
  "name": "khadamat-platform",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace server",
    "dev:frontend": "npm run dev --workspace client",
    "dev:server": "npm run dev --workspace server",
    "dev:backend": "npm run dev --workspace backend",
    "build": "npm run build --workspace client && npm run build --workspace server",
    "build:client": "npm run build --workspace client",
    "build:server": "npm run build --workspace server",
    "start": "npm run start --workspace server",
    "start:backend": "npm run start --workspace backend",
    "test": "npm run test --workspace client",
    "lint": "npm run lint --workspace client",
    "check": "npm run check --workspace server",
    "check:services": "npm run check:services --workspace client",
    "check:services:online": "npm run check:services:online --workspace client",
    "db:push": "npm run db:push --workspace server",
    "backend:ops:verify": "npm run ops:verify --workspace backend"
  }
}
