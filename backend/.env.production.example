NODE_ENV=production

# DB Postgres managée
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB
SHADOW_DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB_shadow

# Redis (prod)
MOCK_REDIS=false
REDIS_URL=redis://HOST:6379

# Antivirus requis en prod
UPLOAD_ANTIVIRUS=true
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# SMTP/SMS/Stripe/KYC (obligatoires côté prod)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=***
SMTP_FROM="Khadamat <no-reply@example.com>"
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=***
TWILIO_AUTH_TOKEN=***
TWILIO_FROM=+1234567890
# (ou VONAGE_* si SMS_PROVIDER=vonage)
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM=
STRIPE_SECRET_KEY=sk_live_***
STRIPE_WEBHOOK_SECRET=whsec_***
KYC_PROVIDER=
KYC_API_KEY=

# Sécurité web stricte
JWT_SECRET=***
COOKIE_SECRET=***
TRUST_PROXY=1
HSTS_ENABLED=true
HSTS_MAX_AGE=15552000
COOKIE_DOMAIN=.example.com
CORS_ORIGINS=https://example.com,https://app.example.com

# URLs publiques
APP_BASE_URL=https://api.example.com
FRONTEND_URL=https://example.com
BACKEND_URL=https://api.example.com

# Observabilité & accès admin
SENTRY_DSN=https://***
METRICS_ENABLED=true
METRICS_TOKEN=***
ADMIN_IP_ALLOWLIST=1.2.3.4,5.6.7.8
