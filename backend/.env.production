NODE_ENV=production
PORT=3000

# Base de données Postgres managée
DATABASE_URL=
SHADOW_DATABASE_URL=

# Redis production
MOCK_REDIS=false
REDIS_URL=

# Antivirus requis
UPLOAD_ANTIVIRUS=true
CLAMAV_HOST=
CLAMAV_PORT=3310

# SMTP / SMS / Paiement
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_SECURE=true

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM=

STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
UPLOAD_DRIVER=auto

# Sécurité web stricte
JWT_SECRET=
COOKIE_SECRET=
TRUST_PROXY=1
HSTS_ENABLED=true
HSTS_MAX_AGE=15552000
COOKIE_DOMAIN=
CORS_ORIGINS=
APP_BASE_URL=
FRONTEND_URL=
BACKEND_URL=
ADMIN_IP_ALLOWLIST=

# Monitoring & observabilité
SENTRY_DSN=
METRICS_ENABLED=true
METRICS_TOKEN=
LOG_LEVEL=info
HEALTH_READY_DELAY_MS=0
APP_VERSION=0.0.0

# KYC configuration
KYC_PROVIDER=stripe
KYC_REQUIRED_FOR=BOTH
KYC_RETENTION_DAYS=30
KYC_HASH_PEPPER=change_me_long_random
KYC_STORE_RAW=false
KYC_ENC_KEY_HEX=

GO_LIVE_MAX_DLQ_WEBHOOKS=5
GO_LIVE_MAX_DLQ_SMS=5
GO_LIVE_MAX_HEALTH_LATENCY_MS=800
GO_LIVE_REQUIRE_ALERTS_RULES=true

JOBS_ENABLE=true
JOBS_TZ=Africa/Casablanca
JOBS_DLQ_INTERVAL_MS=60000
JOBS_RETENTION_CRON=0 3 * * *
JOBS_BACKUP_CRON=30 3 * * *
JOBS_HEARTBEAT_CRON=*/5 * * * *

BACKUP_ENABLE=true
BACKUP_RETENTION_DAYS=14
BACKUP_DRIVER=sqlite
BACKUP_OUTPUT_DIR=./.backups
