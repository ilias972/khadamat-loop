# Node & mode
NODE_ENV=development

# Base de données (démo locale)
DATABASE_URL="file:./dev.db"

# Cache/queues (mockable)
MOCK_REDIS=true
REDIS_URL=

# Antivirus (désactivé par défaut)
UPLOAD_ANTIVIRUS=false
CLAMAV_HOST=
CLAMAV_PORT=

# Notifications
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMS_PROVIDER= # twilio|vonage
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM=

# Paiements / KYC
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
KYC_PROVIDER=
KYC_API_KEY=

# Sécurité / JWT / CORS / Cookies
JWT_SECRET=dev-only-secret
COOKIE_SECRET=dev-only-cookie
TRUST_PROXY=0
HSTS_ENABLED=false
HSTS_MAX_AGE=15552000
COOKIE_DOMAIN=localhost
CORS_ORIGINS=http://localhost:5173

# URLs front/back (utile pour liens/redirect)
APP_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8080

# Observabilité
SENTRY_DSN=
METRICS_TOKEN=
ADMIN_IP_ALLOWLIST=
